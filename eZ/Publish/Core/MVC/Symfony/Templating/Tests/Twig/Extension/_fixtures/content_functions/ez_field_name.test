--TEST--
"ez_field_name" function
--TEMPLATE--
{{ ez_field_name( content, 'testfield' ) }}
{{ ez_field_name( content, 'testfield', "eng-GB" ) }}

--DATA--
return array(
    'content' => $this->getContent(
        'article',
        array(
            'ezxmltext' => array(
                'id' => 5,
                'fieldDefIdentifier' => 'testfield',
                'value' => 'foo2',
                'languageCode' => 'fre-FR',
                'fieldDefNames' => array(
                    'eng-US' => 'American name',
                    'fre-FR' => 'French name',
                )
            )
        )
    )
)
--EXPECT--
French name
French name

